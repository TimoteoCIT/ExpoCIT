@model ExpoCIT.Models.Juez

@{
    ViewData["Title"] = "Pagina Principal";
}
<!-- Modal -->
<div class="modal fade" id="Rubricas" tabindex="-1" aria-labelledby="nameProyecto" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="nameProyecto"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="VerRubrica" method="post">
          <div class="modal-body d-flex flex-column flex-md-row justify-content-center justify-content-md-around gap-5">
                <input type="text" readonly class="form-control-plaintext d-none" id="idProyecto" name="idProyecto">
                <button class="btn btn-success btn-lg" id="FormProyecto" name="btnPresionado" value="@TipoRubrica.ProyectoExpoIngenieria">Rubrica del Proyecto</button>
                <button class="btn btn-success btn-lg" id="FormTrabajoEscrito" name="btnPresionado" value="@TipoRubrica.TrabajoEscritoExpoIngenieria">Rubrica del Trabajo Escrito</button>
                <button class="btn btn-success btn-lg" id="FormProyectoExpoJovem" name="btnPresionado" value="@TipoRubrica.ProyectoExpoJovem">Rubrica del Proyecto</button>
          </div>
      </form>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<h2 class="ms-3 my-2">Pagina Principal</h2>
<div class="container-md my-5">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <a href="https://www.armonia.cr/"><img src="~/media/Armonia.webp" class="d-block w-100" style="max-height: 500px;"></a>
          <div class="carousel-caption d-block">
            <h5>Armonía</h5>
          </div>
        </div>
        <div class="carousel-item">
          <a href="https://www.facebook.com/elcacaotalcr/"><img src="~/media/ElCacaotal.webp" class="d-block w-100" style="max-height: 500px;"></a>
          <div class="carousel-caption d-block">
            <h5>El Cacaotal</h5>
          </div>
        </div>
        <div class="carousel-item">
          <a href="https://es-la.facebook.com/hospitalvetsanantonio/"><img src="~/media/Veterinaria.webp" class="d-block w-100" style="max-height: 500px;"></a>
          <div class="carousel-caption d-block">
            <h5>Hospital Veterinario San Antonio</h5>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
</div>
<div class="container-lg">
    <div class="d-flex justify-content-center justify-content-md-start">
        <h2 class="my-2">Proyectos asignados</h2>
    </div>
    @if (Model.Proyectos != null) {
        @foreach (var proyecto in Model.Proyectos)
        {
            if (!proyecto.estado)
            {
                <div class="card my-4" style="border-radius: 10px;">
                    <div class="card-header d-flex justify-content-between">
                        <h4>@proyecto.Nombre - @proyecto.TipoProyecto</h4>
                        <h4 style="color: Red;">No Revisado</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Numero de Stand: @proyecto.NumStand</p>
                        <footer class="card-unit">
                            <p>Integrantes:</p>
                            @proyecto.Integrantes
                        </footer>
                        <button class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#Rubricas" data-bs-id="@proyecto.Id" data-bs-name="@proyecto.Nombre" data-bs-tipo="@proyecto.TipoProyecto">Ver Rubricas </button>
                    </div>
                </div>
            }
        }
    } else {
        <h2 style="color: red">No tiene ningun proyecto asignado</h2>
    }
    <div class="d-flex justify-content-center justify-content-md-start">
        <h2 class="my-2">Proyectos revisados</h2>
    </div>
    @if (Model.Proyectos != null) {
        @foreach (var proyecto in Model.Proyectos)
        {
            if (proyecto.estado)
            {
                <div class="card my-4" style="border-radius: 10px; background-color: #e0dede;">
                    <div class="card-header d-flex justify-content-between">
                        <h4>@proyecto.Nombre - @proyecto.TipoProyecto</h4>
                        <h4 style="color: Green;">Revisado</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Numero de Stand: @proyecto.NumStand</p>
                        <footer class="card-unit">
                            <p>Integrantes:</p>
                            @proyecto.Integrantes
                        </footer>
                        <button class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#Rubricas" data-bs-id="@proyecto.Id" data-bs-name="@proyecto.Nombre" data-bs-tipo="@proyecto.TipoProyecto">Ver Rubricas </button>
                    </div>
                </div>
            }
        }
    } else {
        <h2 style="color: red">No tiene ningun proyecto asignado</h2>
    }
</div>


<script>
    var RubricasModal = document.getElementById('Rubricas');
RubricasModal.addEventListener('show.bs.modal', function(event) {
    var button = event.relatedTarget;
    var id = button.getAttribute('data-bs-id');
    var name = button.getAttribute('data-bs-name');
    var tipo = button.getAttribute('data-bs-tipo');
    RubricasModal.querySelector('.modal-body #idProyecto').value = id;
    RubricasModal.querySelector('.modal-header #nameProyecto').innerHTML = "Rubricas del proyecto " + name;
    if (tipo == "ExpoJovem") {
        document.getElementById("FormTrabajoEscrito").style.display = "none";
        document.getElementById("FormProyecto").style.display = "none";
        document.getElementById("FormProyectoExpoJovem").style.display = "inline";
    } else {
        document.getElementById("FormTrabajoEscrito").style.display = "inline";
        document.getElementById("FormProyecto").style.display = "inline";
        document.getElementById("FormProyectoExpoJovem").style.display = "none";
    }
})
</script>