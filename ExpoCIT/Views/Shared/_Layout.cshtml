<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpoCIT</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/ExpoCIT.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top">
        <nav class="Titulo p-3 d-flex justify-content-between align-items-baseline">
            @if (@User.HasClaim("Admin","true"))
            {
                <a asp-controller="User" asp-action="Index" style="text-decoration: none; color: white;"><h1>ExpoCIT</h1></a>
            }else{
                <a asp-controller="Juez" asp-action="Index" style="text-decoration: none; color: white;"><h1>ExpoCIT</h1></a>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link active text-light" asp-controller="Home" asp-action="Usuario">
                    <h2>@User.Identity.Name
                    <i class="bi bi-person-circle"></i></h2>
                </a>
            }
        </nav>
    </header>
    <main role="main" class="mt-5 py-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ExpoCIT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
