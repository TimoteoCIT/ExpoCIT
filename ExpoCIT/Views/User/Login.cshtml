@model ExpoCIT.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h1 class="Titulo p-3">ExpoCIT</h1>
<h2 class="mx-1 mt-3">Iniciar Sesión</h2>
<div class="container-sm">
    <div class="d-flex flex-column-reverse flex-sm-row flex-wrap-reverse align-items-center justify-content-around">
        <form method="post" class="d-flex flex-column flex-fill" style="max-width: 768px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasena" class="control-label"></label>
                <input asp-for="Contrasena" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button class="btn btn-primary mt-3">Ingresar</button>
            <a asp-controller="Juez" asp-action="Login" class="link mt-1">Iniciar sesión como Juez</a>
        </form>
        <div>
            <img class="my-2" src="~/media/logoCIT.webp"/>
        </div>
    </div>
</div>