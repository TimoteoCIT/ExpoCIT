@model ExpoCIT.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container-sm mt-3">
    <h2>Inicio de Sesión para Administradores</h2>
    <div class="d-flex flex-column-reverse flex-sm-row flex-wrap-reverse align-items-center justify-content-around">
        <form method="post" class="d-flex flex-column flex-fill" style="max-width: 768px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Nombre de usuario</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasena" class="control-label"></label>
                <input asp-for="Contrasena" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button class="btn btn-primary mt-3">Ingresar</button>
            <a asp-action="LoginJuez" class="link mt-1">Iniciar sesión como Juez</a>
        </form>
        <div>
            <img class="my-2" src="~/media/logoCIT.webp"/>
        </div>
    </div>
</div>

<footer class="fixed-bottom border-top footer text-muted p-3 Titulo d-flex justify-content-center">
     <a asp-action="Informacion" style="text-decoration: none; color: white;"><h4><i class="bi bi-info-circle me-2"></i>Acerca de</h4></a>
</footer>